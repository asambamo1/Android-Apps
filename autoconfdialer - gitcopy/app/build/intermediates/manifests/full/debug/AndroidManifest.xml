<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartlifedigital.autodialer"
    android:versionCode="7"
    android:versionName="1.2.1" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.smartlifedigital.autodialer.CallListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartlifedigital.autodialer.CallReminderScreen"
            android:configChanges="orientation|screenSize"
            android:theme="@style/AppBase" />
        <activity
            android:name="com.smartlifedigital.autodialer.CallDetailsActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden" />

        <service
            android:name="com.smartlifedigital.autodialer.CallSchedulerService"
            android:enabled="true" />

        <receiver android:name="com.smartlifedigital.autodialer.CallManagerHelper" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.smartlifedigital.autodialer.SetCalls"
            android:label="@string/title_activity_activity_set_calls" >
        </activity>
        <activity
            android:name="com.smartlifedigital.autodialer.About"
            android:label="@string/title_activity_about" >
        </activity>
    </application>

</manifest>